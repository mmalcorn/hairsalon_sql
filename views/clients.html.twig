<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  </head>
  <body>

    <form action="/clients" method="post">
      <div class="form-control">
        <label for="add_client">Enter Client Name to Add A Client</label>
        <input id="add_client" name="add_client" type="text">
        <select class="dropdown-menu" id="stylist-select" name="dropdown_stylist" type="number">
          {% for stylist in stylists %}
            <option value="{{ stylist.getId }}">{{ stylist.getName }}</option>
          {% endfor %}
        </select>
      </div>
      <button type="submit" class="btn btn-success">Add client</button>
    </form>


    {% if clients is not empty %}
      {% for client in clients %}
        <ul> {{ client.getClienttName }} </ul>
      {% endfor %}
    {% endif %}

    <p> <a href="/">Home</a> </p>
  </body>
</html>
